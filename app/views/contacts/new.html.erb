<section class="form-wrap">
  <div class="container custom-container">
    <h2 class="mb-4">Зворотній зв'язок</h2>
    <%= form_for @contact do |f| %>
      <% if flash[:error].present? %>
        <p> flash[:error]</p>
      <% end %>

      <div class="field">
        <div><%= f.label :email %></div>
        <%= f.text_field :email, required: true %>
      </div>
      <br>
      <div class="field mb-5">
        <%= f.label :message %> <br>
        <%= f.text_area :message, rows: 3, as: :text %>
      </div>
      <div class="actions">
        <%= invisible_recaptcha_tags text: 'Надіслати лист', :class => "btn-custom btn-secondary-color w-100" %>
      </div>
    <% end %>
  </div>
</section>