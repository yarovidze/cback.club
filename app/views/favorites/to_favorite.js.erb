<% if params[:from_favorites_list] %>
  $('#fav-box-<%= params[:id] %>').hide(100);
<% else %>
  <% if params[:action] == 'create' %>
      $('#fa-frame-<%= params[:offer] %>').replaceWith('<%= escape_javascript(render('offers/fa_star',
       offer: Offer.find(params[:offer_id]))).html_safe %>');
  <% elsif params[:action] == 'destroy' %>
      $('#fa-frame-<%= params[:offer] %>').replaceWith('<%= escape_javascript(render('offers/fa_star',
       offer: Offer.find(params[:id]))).html_safe %>');
  <% end %>
<% end %>