<% if current_user.favorites.exists?(offer_id: offer) %>
<%= link_to favorite_path(id: offer.id, offer: offer), id: "fa-frame-#{offer.to_param}", title: "Видалити з обраного",
            method: :delete, remote: true do %>
  <i class="fas fa-star" id="fa-button-<%= offer.id %>"></i>
<% end %>
<% else %>
<%= link_to favorites_path(user_id: current_user, offer_id: offer.id, offer: offer), id: "fa-frame-#{offer.to_param}", title: "Додати в обране",
            method: :post, remote: true do %>
  <i class="far fa-star" id="fa-button-<%= offer.id %>"></i>
<% end %>
<% end %>