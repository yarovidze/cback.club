<section class="offers-wrap">
  <div class="container">
    <% if @offers.present? %>
      <div class="row">
        <% @offers.each do |offer| %>
          <div class=" col-6 col-sm-6 col-lg-3">
            <div class="offer-list">
              <div class="fav-btn">
                <%= render 'offers/fa_star', offer: offer %>
              </div>
              <%= link_to(offer) do %>
                <div class="offer-img">
                  <%= image_tag(offer.image) if offer.image.present? %>
                </div>
                <div class="offer-title">
                  <h3><%= offer.name %></h3>
                </div>
                <div class="offer-descr-list">
                  <div class="offer-percent">
                    <strong><%= offer.cashback %></strong>
                  </div>
                </div>
              <% end %>
              <div class="offer-link">
                <%= link_to (fa_icon "user-o", text: "В магазин"), redirect_path(id: offer.id),
                            class: "btn-custom btn-secondary-color btn-custom-sm", target: :_blank, method: :get %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="d-flex align-items-center justify-content-center ">
        <div class="text-center mt-4 mb-3 alert error-container">
          <h6 class="font-weight-bold mt-3 mb-3">Нажаль пошук не дав результатів :-( </h6>
          <div class="errors-img"><%= image_pack_tag("media/images/binman.svg") %></div>
          <h6 class="font-weight-bold mt-3 mb-3">Cпробуйте ввести інший запит</h6>
        </div>
      </div>
    <% end %>
  </div>
</section>