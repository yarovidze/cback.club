<section class="offers-wrap">
  <div class="container">
    <div class="row">
      <% @offers.each do |offer| %>
        <div class="col-xs-6 col-sm-6 col-lg-3">
          <div class="offer-list">
            <div class="offer-img">
              <%= image_tag offer.image if offer.image.present? %>
            </div>
            <div class="offer-title">
              <h3><%= link_to offer.name, offer %></h3>
            </div>
            <div class="offer-percent">
              <div>кешбек: <strong><%= offer.cashback %></strong></div>
              <div><%= link_to (fa_icon "user-o", text: "В магазин"), root_path, class: "btn-custom btn-secondary-color btn-custom-sm", method: :get %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <p id="notice"><%= notice %></p>
  </div>
</section>