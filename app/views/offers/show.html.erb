<section class="offer-detail-wrap">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-lg-4">
        <div class="offer-detail mb-4 text-center">
          <div class="offer-img-details">
            <%= image_tag @offer.image if @offer.image.present? %>
          </div>
          <div class="offer-category-detail">
            <%= @offer.category.name %>
          </div>
          <%= link_to (fa_icon "user-o", text: "В магазин"), root_path, class: "btn-custom btn-secondary-color mt-2 mb-2", method: :get %>
          <div class="offer-cashback-confirm mb-3 mt-2">
            <i class="far fa-clock"></i> Середній час очікування кешбеку: <strong><%= @offer.confirmation %> днів</strong>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-lg-8">
        <div class="offer-detail pt-3 mb-4">
          <div class="offer-label-percent text-right">
            <p><i class="fab fa-gripfire"></i> кешбек: <strong> <%= @offer.cashback %></strong></p>
          </div>
          <h3>Кешбек на сайті <strong class="custom-title"><%= @offer.name %></strong></h3>
          <div>
            <%== @offer.description %>
          </div>

          <!-- breadcrumbs -->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><%= link_to('Головна', root_path) %></li>
              <!--<li class="breadcrumb-item"><%#= link_to(@offer.category.name.capitalize, @offer.category ) %></li>-->
              <li class="breadcrumb-item active" aria-current="page"><%= @offer.name.capitalize %></li>
            </ol>
          </nav>
        </div>
        <!-- breadcrumbs end -->
      </div>
    </div>
  </div>
</section>
