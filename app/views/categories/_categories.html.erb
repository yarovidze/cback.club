<section class="categories-wrap">
  <% Category.all.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="categories-list btn-categories">
        <span class="category-icon"><%= image_tag(category.category_icon, alt: "category icon") if category.category_icon.present? %></span>
        <%= category.name %>
      </div>
    <% end %>
  <% end %>
</section>