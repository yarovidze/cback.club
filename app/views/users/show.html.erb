<section class="offers-wrap favorite-section">
  <div class="container">
    <h4 class="text-left mb-4 font-weight-bold">Мій кабінет:</h4>
    <div class="row">
      <div class="col-sm-12 col-lg-3">
        <div class="offer-detail mb-4 text-center">
          <div class="text-center mb-2 font-weight-bold">
            <%= current_user.email %>
          </div>
          <div class="text-center">
            <div class="mb-2">ID користувача:</div>
            <div class="cback-text"><%= current_user.id %></div>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-lg-9">
        <div class="row">
          <div class="col-sm-12 col-lg-4">
            <div class="offer-detail mb-2">
              <div class="mb-3"><i class="fas fa-bullseye text-success"></i> Готові до виводу</div>
              <div class="cback-text">
                <%= number_to_currency(@transactions.where(:status => 'approved').collect(&:user_cashback).sum, unit: "₴", separator: ",", delimiter: " ", format: "%n %u") %>
              </div>
            </div>
          </div>
          <div class="col-sm-12 col-lg-4">
            <div class="offer-detail mb-2">
              <div class="mb-3"><i class="fas fa-bullseye text-warning"></i> В очікуванні</div>
              <div class="cback-text">
                <%= number_to_currency(@transactions.where(:status => 'pending').collect(&:user_cashback).sum, unit: "₴", separator: ",", delimiter: " ", format: "%n %u") %>
              </div>
            </div>
          </div>
          <div class="col-sm-12 col-lg-4">
            <div class="offer-detail mb-2">
              <div class="mb-3"><i class="fas fa-bullseye text-info"></i> Зароблено за весь час</div>
              <div class="cback-text">
                <%= number_to_currency(@transactions.where(:status => 'paid').collect(&:user_cashback).sum, unit: "₴", separator: ",", delimiter: " ", format: "%n %u") %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <h4 class="font-weight-bold text-left mb-3 mt-3">Покупки:</h4>
            <div class="offer-detail text-center">
              <div class="row mb-3">
                <div class="col-sm-12 col-lg-2">
                  <div class="font-weight-bold">Дата</div>
                </div>
                <div class="col-sm-12 col-lg-4">
                  <div class="font-weight-bold">Магазин</div>
                </div>
                <div class="col-sm-12 col-lg-2">
                  <div class="font-weight-bold">Сума</div>
                </div>
                <div class="col-sm-12 col-lg-2">
                  <div class="font-weight-bold">Кешбек</div>
                </div>
                <div class="col-sm-12 col-lg-2">
                  <div class="font-weight-bold">Статус</div>
                </div>
              </div>
              <div class="row">
                <% @transactions.each do |trans| %>
                  <div class="col-sm-12 col-lg-2 mb-2">
                    <div><%= trans.created_at.strftime("%d-%m-%Y") %></div>
                  </div>
                  <div class="col-sm-12 col-lg-4 mb-2">
                    <div><%= trans.offer.name %></div>
                  </div>
                  <div class="col-sm-12 col-lg-2 mb-2">
                    <div><%= number_to_currency(trans.total, unit: "₴", separator: ",", delimiter: " ", format: "%n %u") %></div>
                  </div>
                  <div class="col-sm-12 col-lg-2 mb-2">
                    <div><%= number_to_currency(trans.user_cashback, unit: "₴", separator: ",", delimiter: " ", format: "%n %u") %></div>
                  </div>
                  <div class="col-sm-12 col-lg-2 mb-2">
                    <div><%= trans.status %></div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
