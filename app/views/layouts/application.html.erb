<!DOCTYPE html>
<html>
<head>
  <title>Cback.club</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,200;0,300;0,400;0,500;0,600;1,200;1,300;1,400&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap" rel="stylesheet">
  <meta name="verify-admitad" content="4669a05cac"/>
</head>
<body>
<section class="main-section">
  <header class="header">
    <div class="logo-header">
      <a href="/"><%= image_pack_tag("media/images/logo_1.svg") %></a>
    </div>
    <div class="btn-group-header">
      <% if current_user %>
        <%= link_to (fa_icon "user-o", text: "Вихід"), destroy_user_session_path, class: "btn-custom btn-main-color", method: :delete %>
      <% else %>
        <%= link_to (fa_icon "user-o", text: "Вхід"), new_user_session_path, class: "btn-custom btn-transparent", method: :post %>
        <%= link_to (fa_icon "user-o", text: "Реєстрація"), new_user_session_path, class: "btn-custom btn-main-color", method: :get %>
      <% end %>

    </div>
  </header>
  <%= yield %>
</section>
</body>
</html>
